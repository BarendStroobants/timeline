{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container col-6">
        <h1 class="text-center my-5">Register</h1>

        <div class="row dateContainer d-flex justify-content-center text-center">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.name) }}
            {{ form_row(registrationForm.nickname) }}
            {{ form_row(registrationForm.age) }}
            {{ form_row(registrationForm.address) }}
            {{ form_row(registrationForm.usage) }}
            {{ form_row(registrationForm.agreeTerms) }}
        </div>

        <div class="row dateContainer d-flex justify-content-center">
            <button class="bottomboxbutton" type="submit">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
