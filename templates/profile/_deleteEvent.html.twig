<form method="post" action="{{ path('delete_event', {'event': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
    <button class="p-1 bottomboxbuttonSizer bottomboxbutton buttonsmallerizer bg-danger">X</button>
</form>
