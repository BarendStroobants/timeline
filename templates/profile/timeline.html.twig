<div class="container-fluid">
    <h1 class="col-12 text-center my-5">Timeline</h1>
    <main>
        <section class="row dateContainer d-flex justify-content-center">
            <div class="col-1 text-right arrows">&#8612;</div>
            <div class="col-3">
                <div class="row d-flex justify-content-center">
                    <div class="col-4 text-right"></div>
                    <div id="month" class="month py-1 px-2 col-4 mx-auto"></div>
                    <div class="col-4"></div>
                </div>
            </div>
            <div class="today col-3 rounded text-center btn">Today</div>
            <div class="col-3">
                <div class="row d-flex justify-content-center">
                    <div class="col-4 text-right">
                    </div>
                    <div id="year" class="year col-4 py-1 px-2 col-1 col-1 mx-auto"></div>
                    <div class="col-4"></div>
                </div>
            </div>
            <div class="col-1 arrows">&#8614;</div>
        </section>
        <section class="row dateContainer">

            <div class="dateBox col-1 px-0 py-2 text-center">-3</div>
            <div class="dateBox col-1 px-0 py-2 text-center">-2</div>
            <div class="dateBox col-1 px-0 py-2 text-center">-1</div>
            <div class="dateBox col-1 px-0 py-2 text-center">0</div>
            <div class="dateBox col-1 px-0 py-2 text-center">+1</div>
            <div class="dateBox col-1 px-0 py-2 text-center">+2</div>
            <div class="dateBox col-1 px-0 py-2 text-center">+3</div>

        </section>
    </main>
</div>
<template id="expandedDates">
        <div class="agendaHours">
            <section class="agendaHoursInside my-5 d-flex flex-column">
                {% for hours in 0..7 %}
                    <div class="d-flex">
                        <p>{{loop.index0}}</p>
                        <div>
                            {% for quarters in 0..3 %}
                                <div class="minutes">
                                    {% for minutes in 0..14 %}
                                        <div class="minuteBox"></div>
                                    {% endfor %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </section>
        </div>

</template>

